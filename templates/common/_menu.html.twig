<!-- Boostrap 5 Menu -->
<nav class="navbar navbar-expand navbar-dark bg-dark mb-1">
  <a class="navbar-brand" href="#">&nbsp;</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
		<li class="nav-item">
		  <a class="nav-link {{ 
			  app.request.attributes.get('_route') == 'app_register_new' 
		  		or app.request.attributes.get('_route') == 'app_regiser_new'
				or app.request.attributes.get('_route') == 'app_active_courses'
		  ? 'active' : '' }}" 
		  	  href="{{ path('app_active_courses') }}">{{ 'navitem.register' | trans | capitalize }}</a>
		</li>
		{% if is_granted('ROLE_ADMIN') %}
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle
				{{ ( app.request.attributes.get('_route') == 'admin_user_list' 
						or app.request.attributes.get('_route') == 'app_course_index'
						or app.request.attributes.get('_route') == 'app_course_new'
						or app.request.attributes.get('_route') == 'app_course_edit'
						or app.request.attributes.get('_route') == 'app_activity_index'
						or app.request.attributes.get('_route') == 'app_registration_index'
						or app.request.attributes.get('_route') == 'app_registration_edit'
						or app.request.attributes.get('_route') == 'app_registration_show'
						 )	
					? ' active' : '' 
				}}"
				data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">{{ 'navitem.administration' | trans | capitalize }}</a>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" href="{{ path('admin_user_list') }}">{{"navitem.users" | trans | capitalize}}</a></li>
				<li><a class="dropdown-item" href="{{ path('app_course_index') }}">{{"navitem.courses" | trans | capitalize}}</a></li>
				<li><a class="dropdown-item" href="{{ path('app_activity_index') }}">{{"navitem.activities" | trans | capitalize}}</a></li>
				<li><a class="dropdown-item" href="{{ path('app_registration_index') }}">{{"navitem.registrations" | trans | capitalize}}</a></li>
			</ul>
		</li>
		{% endif %}}
    </ul>
  </div>
</nav>
		

